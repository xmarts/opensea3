<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_export_ats_form" model="ir.ui.view">
        <field name="name">Exportar ATS XML</field>
        <field name="model">ats.wizard</field>
        <field name="arch" type="xml">
            <form string="Exportar Archivo ATS">
                <field name="state" invisible="1"/>
                <separator string="Se exportara la información de la empresa a la que pertenece el usuario actual." colspan="4"/>
                <group states="choose">
                    <field name="date"/>
                    <field name="company_id" readonly="1" options="{'no_open': True}"/>
                    <field name="num_estab_ruc"/>
                </group>
                <separator string="Archivo generado correctamente." states="export"/>
                <group states="export,export_error">
                    <field name="fcname" invisible="1"/>
                    <field name="data" filename="fcname" readonly="1"/>
                </group>
                <separator string="Archivo con errores durante la generación del ATS." states="export_error"/>
                <group states="export_error">
                    <field name="fcname_errores" invisible="1"/>
                    <field name="error_data" filename="fcname_errores" readonly="1"/>
                </group>
                <footer class="oe_right">
                    <button icon="fa-cancel" class="oe_link" special="cancel" states="choose" string="Cancelar"/>
                    <button icon="fa-execute" name="act_export_ats" states="choose" string="Exportar XML" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_export_ats" model="ir.actions.act_window">
        <field name="name">Exportar Anexo Transaccional Simplificado</field>
        <field name="res_model">ats.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="Reportes SRI"
              id="menu_sri_reporting"
              parent="account_accountant.menu_accounting"/>

    <menuitem name="ATS"
              action="action_export_ats"
              id="menu_export_ats"
              parent="menu_sri_reporting"/>

</odoo>
