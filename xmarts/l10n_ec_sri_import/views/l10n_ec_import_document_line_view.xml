<odoo>

    <record model="ir.ui.view" id="l10n_ec_import_document_line_tree_view">
        <field name="name">l10n.ec.import.document.line.tree.view</field>
        <field name="model">l10n.ec.import.document.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" edit="0" create="0">
                <button name="validate_document" string="Validate" icon="fa-circle" class="oe_highlight" type="object"/>
                <field name="import_id" invisible="1"/>
                <field name="l10n_latam_document_type_id"/>
                <field name="l10n_latam_document_number"/>
                <field name="reconciled_sri"/>
                <field name="vat"/>
                <field name="partner_id"/>
                <field name="partner_name"/>
                <field name="emission_date"/>
                <field name="authorization_code"/>
                <field name="access_key"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_ec_import_document_line_form_view">
        <field name="name">l10n.ec.import.document.line.form.view</field>
        <field name="model">l10n.ec.import.document.line</field>
        <field name="arch" type="xml">
            <form edit="0" create="0">
                <header>
                    <button name="validate_document" string="Validate" class="oe_highlight" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="import_id" invisible="1"/>
                        <field name="l10n_latam_document_type_id"/>
                        <field name="l10n_latam_document_number"/>
                        <field name="vat"/>
                        <field name="partner_id"/>
                        <field name="partner_name"/>
                        <field name="emission_date"/>
                    </group>
                    <group>
                        <field name="authorization_code"/>
                        <field name="access_key"/>
                        <field name="amount"/>
                    </group>
                    <group>
                        <field name="move_id"/>
                        <field name="withholding_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
