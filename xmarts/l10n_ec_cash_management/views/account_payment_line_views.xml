<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="account_payment_line_inh_tree" model="ir.ui.view">
        <field name="name">account.payment.line.inh.tree</field>
        <field name="model">account.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_type']" position="after">
                <field name="bank_payment_method"/>
            </xpath>
        </field>
    </record>

    <record id="account_payment_line_inh_form" model="ir.ui.view">
        <field name="name">account.payment.line.inh.form</field>
        <field name="model">account.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bank_line_id']" position="after">
                <field name="bank_payment_method"/>
            </xpath>
        </field>
    </record>

</odoo>
