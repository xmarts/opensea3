<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_eremission_guide" model="ir.actions.report">
        <field name="name">Guía de Remisión</field>
        <field name="model">account.remission.guide</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ec_remission.report_eremission_guide_template</field>
        <field name="report_file">l10n_ec_remission.report_eremission_guide_template</field>
        <field name="binding_model_id" ref="l10n_ec_remission.model_account_remission_guide"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_eremission_guide_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ec_einvoice.einvoice_layout_elec">
                    <t t-foreach="o.line_ids" t-as="ob">
                        <p style="page-break-before:always;">
                            <div class="page" style="font-size: 12px">
                                <div class="row" style="font-size: 14px;width:100%">
                                    <div class="col-6" style="font-size:14px">
                                        <div class="logo" style="width: 330px; height: 130px;text-align:center">
                                            <img t-if="o.company_id.logo" height="100" t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()"/>
                                        </div><br/>
                                        <div style="height:60%;padding-left:7px;padding-top: 20px;padding-bottom: 70px;border:1px solid black;border-radius: 10px">
                                            <h4 style="text-align:center"><span t-esc="o.company_id.name"/></h4>
                                            <strong>Dirección: </strong><strong/><span t-esc="o.company_id.street"/> Y <span t-esc="o.company_id.street2"/><br/>
                                            <strong>Dirección Matriz: </strong><strong/><span t-esc="o.company_id.street"/> Y <span t-esc="o.company_id.street2"/><br/>
                                            <t t-if="o.company_id.is_special_taxpayer=='284'">
                                                <strong>Contribuyente Especial Nro.: </strong>
                                                <span t-esc="o.company_id.company_registry or '000' "/><br/>
                                            </t>
                                            <strong>Obligado a Llevar contabilidad: </strong><span t-esc="o.company_id.is_force_keep_accounting"/><br/>
                                            <t t-if="o.company_id.agent==True">
                                                <strong>Agente de Retención: </strong>SI<br/>
                                                <strong>Resolución: </strong><span t-esc="o.company_id.agent_text"/><br/>
                                            </t>
                                        </div>
                                    </div>
                                    <div class="col-6" style="border:1px solid black;border-radius: 10px;padding:5px">
                                        <span style="font-size: 18px"><strong>RUC </strong></span> <span style="font-size: 18px" t-esc="o.company_id.vat"/><br/>
                                        <h4 style="text-align: center;">GUÍA DE REMISIÓN</h4><br/>
                                        <strong>NÚMERO:</strong> <span t-esc="o.name"/><br/>
                                        <strong>NÚMERO DE AUTORIZACIÓN:</strong><br/>
                                        <span t-esc="o.numero_autorizacion"/><br/>
                                        <strong>FECHA Y HORA DE AUTORIZACIÓN: </strong><span t-esc="o.fecha_autorizacion"/><br/>
                                        <strong>AMBIENTE: </strong><span t-esc="o.company_id.env_service == '1' and 'PRUEBAS' or 'PRODUCCIÓN'"/><br/>
                                        <span><strong>EMISIÓN: </strong><span t-esc="o.company_id.emission_code == '1' and 'NORMAL' or 'INDISPONIBILIDAD'"/></span><br/>
                                        <strong>CLAVE DE ACCESO</strong><br/>
                                        <div>
                                            <img style="text-align:center;width:100%" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', o.clave_acceso, 450, 60)"/>
                                        </div>
                                        <br/>
                                    </div>
                                </div>
                                <div style="border: 1px solid; padding-left: 20px; margin-top: 10px; margin-bottom: 10px">
                                    <div style="margin-bottom: 10px;" class="row">
                                        <div class="col-10" style="padding-left: 0px;">
                                            <span><strong>IDENTIFICACIÓN DEL TRANSPORTISTA</strong></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>FECHA DE EMISIÓN:</strong></span>
                                        </div>
                                        <div class="col-5" style="padding-left: 0px;">
                                            <span t-esc="o.date"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>NOMBRE/RAZÓN SOCIAL:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="o.carrier_id.name.upper()"/>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>IDENTIFICACIÓN:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="o.carrier_id.vat"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>PUNTO DE PARTIDA:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="o.company_id.partner_id.street"/>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>PLACA:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="o.license_plate.upper()"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>INICIO TRASLADO:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="o.date_start"/>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>FIN TRASLADO:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="o.date_end"/>
                                        </div>
                                    </div>
                                </div>
                                <div style="border: 1px solid; padding-left: 20px; padding-right: 20px; margin-bottom: 10px">
                                    <div class="row">
                                        <div class="col-10" style="padding-left: 0px;">
                                            <span><strong>DESTINATARIO</strong></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>COMPROBANTE DE VENTA:</strong></span>
                                        </div>
                                        <t t-if="ob.move_id.move_type">
                                            <div class="col-3" style="padding-left: 0px;">
                                                <span>FACTURA</span>
                                            </div>
                                        </t>
                                        <t t-else="ob.move_id.move_type">
                                            <div class="col-3" style="padding-left: 0px; ">
                                                <span>N/A</span>
                                            </div>
                                        </t>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>N. COMPROBANTE:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="ob.move_id.l10n_latam_document_number or 'N/A'"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>N. AUTORIZACIÓN:</strong></span>
                                        </div>
                                        <div class="col-9" style="padding-left: 0px;">
                                            <span t-esc="ob.move_id.numero_autorizacion or ob.move_id.auth_number or 'N/A'"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>NOMBRE/RAZON SOCIAL:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="ob.partner_id.name"/>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>IDENTIFICACIÓN:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="ob.partner_id.vat"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>TELÉFONO:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="ob.partner_id.phone"/>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>MOTIVO:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="ob.reason_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>PUNTO DE LLEGADA:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="ob.partner_id.street"/>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span><strong>RUTA:</strong></span>
                                        </div>
                                        <div class="col-3" style="padding-left: 0px;">
                                            <span t-esc="ob.route_id.name"/>
                                        </div>
                                    </div>
                                    <br/>
                                </div>
                                <table class="table table-condensed">
                                    <thead>
                                        <th style="border: 1px solid">CANTIDAD</th>
                                        <th class="col-2" style="border: 1px solid">DESCRIPCIÓN</th>
                                        <th style="border: 1px solid">CÓDIGO DE BARRA</th>
                                        <th style="border: 1px solid">CÓDIGO AUX.</th>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="ob.picking_id.move_line_ids_without_package" t-as="obj">
                                            <td style="border:1px solid">
                                                <span t-esc="obj.qty_done"/>
                                                <!--                                                <span t-esc="obj.product_uom_qty"/>-->
                                            </td>
                                            <td style="padding-left: 0px; border:1px solid">
                                                <span t-esc="obj.product_id.name"/>
                                            </td>
                                            <td style="border: 1px solid;">
                                                <img style="text-align: left;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128',obj.product_id.barcode, 225, 30)"/>
                                            </td>
                                            <td style="padding-left: 0px; border:1px solid">
                                                <span t-esc="obj.product_id.default_code"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br/>
                            </div>
                        </p>
                    </t>
                </t>
            </t>
        </t>
    </template>


</odoo>