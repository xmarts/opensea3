<odoo>

    <record id="view_stock_picking_guide_form" model="ir.ui.view">
        <field name="name">stock.picking.guide.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <button name="%(action_generate_remission_guide)d"
                        attrs="{'invisible': ['|', ('state', '!=', 'done'), ('guide_id', '!=', False)]}"
                        context="{'default_picking_id': active_id, 'default_partner_id': partner_id}"
                        string="Generate Remission Guide"
                        type="action"
                        class="oe_highlight"/>
                <button name="action_generate_edocument"
                        attrs="{'invisible': [('guide_id', '=', False)]}"
                        string="Generate Remission Guide"
                        type="object"
                        class="oe_highlight"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="guide_id" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>

</odoo>