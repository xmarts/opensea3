<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- GUÍAS DE REMISIÓN LINEAS-->


    <!-- TREE VIEW -->
    <record id="view_account_remission_guide_line_tree" model="ir.ui.view">
        <field name="name">account.remission.guide.line.tree</field>
        <field name="model">account.remission.guide.line</field>
        <field name="arch" type="xml">
            <tree string="Remission Guide Lines" editable="bottom">
                <field name="guide_id" invisible="1"/>
                <field name="picking_id" required="1" options="{'no_quick_create':True,'no_open':True,'no_create_edit':False}"/>
                <field name="move_id"/>
                <field name="partner_id"/>
                <field name="reason_id" required="1"/>
                <field name="dau"/>
                <field name="route_id"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_account_remission_guide_line_form_ec" model="ir.ui.view">
        <field name="name">view.account.remission.guide.line.form.ec</field>
        <field name="model">account.remission.guide.line</field>
        <field name="arch" type="xml">
            <form string="Remission Guide Lines">
                <sheet>
                    <group>
                        <group>
                            <field name="guide_id" invisible="1"/>
                            <field name="picking_id"/>
                            <field name="move_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="reason_id"/>
                            <field name="dau"/>
                            <field name="route_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>