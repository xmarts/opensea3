<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- EMISSION REMISSION POINT -->

    <!-- TREE VIEW -->

    <record id="view_l10n_ec_stablishment_remission_tree" model="ir.ui.view">
        <field name="name">l10n.ec.stablishment.remission.tree</field>
        <field name="model">l10n.ec.stablishment</field>
        <field name="inherit_id" ref="l10n_ec_base.view_l10n_ec_emission_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='electronic_withholding']" position="after">
                <field name="electronic_remission"/>
            </xpath>
        </field>
    </record>

    <!-- FORM VIEW -->

    <record id="view_l10n_ec_stablishment_remission_form" model="ir.ui.view">
        <field name="name">l10n.ec.stablishment.remission.form</field>
        <field name="model">l10n.ec.stablishment</field>
        <field name="inherit_id" ref="l10n_ec_base.view_l10n_ec_emission_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='withholding_sequence_id']" position="after">
                <field name="electronic_remission"/>
                <field name="remission_guide_sequence_id"/>
            </xpath>
        </field>
    </record>

</odoo>
