<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ACCOUNT MOVE REFUND LINE -->

    <!-- TREE VIEW -->
    <record id="view_account_move_refund_line_tree" model="ir.ui.view">
        <field name="name">account.move.refund.line.tree</field>
        <field name="model">account.move.refund.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="move_id" invisible="1"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="l10n_latam_document_type_id"/>
                <field name="emission_point"/>
                <field name="stablishment"/>
                <field name="number"/>
<!--                <field name="auth_id"/>-->
                <field name="auth_number"/>
                <field name="base_imponible" sum="total"/>
                <field name="base_gravada" sum="total"/>
                <field name="base_no_gravada" sum="total"/>
                <field name="iva_amount" sum="total"/>
                <field name="ice_amount" sum="total"/>
                <field name="total" sum="total"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_account_move_refund_line_form" model="ir.ui.view">
        <field name="name">account.move.refund.line.form</field>
        <field name="model">account.move.refund.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="move_id" invisible="1"/>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="l10n_latam_document_type_id" widget="selection"/>
                        </group>
                        <group>
                            <field name="stablishment"/>
                            <field name="emission_point"/>
                            <field name="number"/>
                            <field name="auth_number"/>
                            <field name="base_imponible"/>
                            <field name="base_gravada"/>
                            <field name="base_no_gravada"/>
                            <field name="iva_amount"/>
                            <field name="ice_amount"/>
                            <field name="total"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
