<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- L10N EC PERSON TYPE-->

    <!-- TREE VIEW -->
    <record id="view_l10n_ec_person_type_tree" model="ir.ui.view">
        <field name="name">l10n.ec.person.type.tree</field>
        <field name="model">l10n.ec.person.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_l10n_ec_person_type_search" model="ir.ui.view">
        <field name="name">l10n.ec.person.type.search</field>
        <field name="model">l10n.ec.person.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_l10n_ec_person_type_form" model="ir.ui.view">
        <field name="name">l10n.ec.person.type.form</field>
        <field name="model">l10n.ec.person.type</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTIONS -->
    <record id="action_l10n_ec_person_type" model="ir.actions.act_window">
        <field name="name">Person Type</field>
        <field name="res_model">l10n.ec.person.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENUS -->
    <menuitem action="action_l10n_ec_person_type"
              name="Person Type"
              id="menu_action_l10n_ec_person_type"
              parent="account.account_account_menu"
              sequence="4"/>


</odoo>
