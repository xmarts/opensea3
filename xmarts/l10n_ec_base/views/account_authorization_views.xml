<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ACCOUNT AUTHORIZATION -->

    <!-- TREE VIEW -->
    <record id="view_account_authorization_tree" model="ir.ui.view">
        <field name="name">account.auth.tree</field>
        <field name="model">account.authorization</field>
        <field name="arch" type="xml">
            <tree>
                <field name="l10n_latam_document_type_id"/>
                <field name="is_electronic"/>
                <field name="partner_id"/>
                <field name="expiration_date"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_account_authorization_search" model="ir.ui.view">
        <field name="name">account.auth.search</field>
        <field name="model">account.authorization</field>
        <field name="arch" type="xml">
            <search>
                <field name="l10n_latam_document_type_id"/>
                <field name="is_electronic"/>
                <field name="partner_id"/>
                <field name="expiration_date"/>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_account_auth_form" model="ir.ui.view">
        <field name="name">account.auth.form</field>
        <field name="model">account.authorization</field>
        <field name="arch" type="xml">
            <form string="Autorizaciones SRI">
                <sheet>
                    <group>
                        <group>
                            <field name="is_electronic"/>
                            <field name="l10n_latam_document_type_id"  widget="selection"/>
                            <field name="partner_id" domain="[('supplier_rank','>',1)]"/>
                            <field name="sequence_id"/>
                        </group>
                        <group>
                            <field name="name" attrs="{'invisible': [('is_electronic','=',True)], 'required': [('is_electronic','=',False)]}"/>
                            <field name="expiration_date" attrs="{'required': [('is_electronic','!=',True)], 'invisible': [('is_electronic','=',True)]}"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <label string="Secuencia de Comprobante" for="num_start" attrs="{'invisible': [('is_electronic','=',True)], 'required': [('is_electronic','=',False)]}"/>
                            <div>
                                <field name="num_start" class="oe_inline" placeholder="1" attrs="{'invisible': [('is_electronic','=',True)], 'required': [('is_electronic','=',False)]}"/> -
                                <field name="num_end" class="oe_inline" placeholder="100" attrs="{'invisible': [('is_electronic','=',True)], 'required': [('is_electronic','=',False)]}"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

