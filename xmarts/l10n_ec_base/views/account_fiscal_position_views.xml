<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ACCOUNT FISCAL POSITION FORM VIEW INHERIT -->
    <record id="l10n_ec_account_position_view_form" model="ir.ui.view">
        <field name="name">l10n.ec.account.fiscal.position.form</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <!--                <field name="l10n_ec_loc" invisible="1"/>-->
                <field name="l10n_ec_person_type_id" required="1" options="{'no_quick_create':True,'no_open':True,'no_create_edit':False}"/>
                <field name="is_force_keep_accounting"/>
                <field name="is_special_taxpayer"/>
                <field name="agent"/>
                <field name="regime"/>
                <field name="rimpe_regime"/>
            </xpath>
        </field>
    </record>


</odoo>
