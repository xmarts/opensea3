<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WITHHOLDINGS -->

    <!-- GRAPH VIEW -->
    <record id="view_account_withholding_graph" model="ir.ui.view">
        <field name="name">account.withholding.graph</field>
        <field name="model">account.withholding</field>
        <field name="arch" type="xml">
            <graph string="Suppliers Withholding" type="bar">
                <field name="partner_id"/>
                <field name="amount_total" operator="+"/>
            </graph>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_account_withholding_search" model="ir.ui.view">
        <field name="name">account.withholding.search</field>
        <field name="model">account.withholding</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="name"/>
                <field name="move_id"/>
                <group expand="1" string="Group By">
                    <filter name="group_by_partner_id" string="Partner" context="{'group_by':'partner_id'}"/>
                    <filter name="group_by_state" string="Estado" context="{'group_by':'state'}"/>
                    <filter name="group_by_type" string="Tipo" context="{'group_by':'withholding_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_account_withholding_tree" model="ir.ui.view">
        <field name="name">account.withholding.tree</field>
        <field name="model">account.withholding</field>
        <field name="arch" type="xml">
            <tree string="Withholding" decoration-info="state=='draft'" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="withholding_type" invisible="1"/>
                <field name="l10n_latam_document_type_id"/>
                <field name="move_id"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_account_withholding_form_ec" model="ir.ui.view">
        <field name="name">view.account.withholding.form.ec</field>
        <field name="model">account.withholding</field>
        <field name="arch" type="xml">
            <form string="Suppliers Withholding">
                <header>
                    <button name="button_validate"
                            string="Validate"
                            class="oe_highlight"
                            type="object"
                            states="draft"/>
                    <button name="button_cancel"
                            string="Cancel"
                            type="object"
                            states="draft,done"/>
                    <button name="button_draft"
                            string="Draft"
                            type="object"
                            states="cancel"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="NÂ° Withholding" style="font-weight:bold"/>
                        <h1>
                            <field name="name" string="Number" class="oe_inline" placeholder="001-001-000234768" attrs="{'readonly':['|', ('state','!=','draft'), ('withholding_type', '!=', 'out_invoice')], 'required':[('withholding_type','=','out_invoice')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="move_id"
                                   options="{'no_create':True,'no_quick_create':True,'no_edit': True, 'no_create_edit': True}"
                                   attrs="{'readonly':[('state','!=','draft')]}"
                                   domain="[('company_id', '=', company_id), ('move_type', '=', withholding_type), ('state', '!=', 'draft')]"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="manual" invisible="1"/>
                            <field name="l10n_ec_emission_point_id"
                                   options="{'no_create':True,'no_quick_create':True,'no_edit': True, 'no_create_edit': True}"
                                   attrs="{'invisible': [('withholding_type','=', 'out_invoice')], 'required': [('withholding_type','=', 'in_invoice')]}"/>
                            <field name="date"/>
                            <field name="withholding_type" invisible="1"/>
                            <field name="l10n_latam_document_type_id" readonly="1" force_save="1"/>
                            <field name="move_wh_id" readonly="1" attrs="{'invisible': [('move_wh_id','=', False)]}" force_save="1"/>
                        </group>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Impuestos" name="taxes">
                            <field name="tax_ids" nolabel="1"/>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_total" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                            <separator/>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" attrs="{'invisible': [('withholding_type', '=', 'out_invoice')]}"/>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ACTIONS -->

    <record id="action_account_withholding_customer_tree" model="ir.actions.act_window">
        <field name="name">Customer Invoice Withholding</field>
        <field name="res_model">account.withholding</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'withholding_type': 'out_invoice'}</field>
        <field name="domain">[('withholding_type','=','out_invoice')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_withholding_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_account_withholding_form_ec')})]"/>
    </record>

    <record id="action_account_withholding2_tree" model="ir.actions.act_window">
        <field name="name">Suppliers Invoice Withholdings</field>
        <field name="res_model">account.withholding</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'withholding_type': 'in_invoice'}</field>
        <field name="domain">[('withholding_type','=','in_invoice')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_withholding_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_account_withholding_form_ec')})]"/>
    </record>

    <!-- MENUS -->
    <menuitem action="action_account_withholding2_tree"
              id="menu_action_withholding"
              sequence="2"
              parent="account.menu_finance_payables"/>

    <menuitem action="action_account_withholding_customer_tree"
              id="menu_action_withholding_receivable"
              parent="account.menu_finance_receivables"/>

</odoo>
