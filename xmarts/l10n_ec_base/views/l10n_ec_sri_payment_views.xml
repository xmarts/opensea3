<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- SRI PAYMENT FORM -->

    <record id="view_sri_payment_form" model="ir.ui.view">
        <field name="name">view.l10n.ec.sri.payment.form</field>
        <field name="model">l10n.ec.sri.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SRI PAYMENT TREE -->

    <record id="view_sri_payment_tree" model="ir.ui.view">
        <field name="name">view.l10n.ec.sri.payment.tree</field>
        <field name="model">l10n.ec.sri.payment</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->

    <record id="view_sri_payment_search" model="ir.ui.view">
        <field name="name">view.l10n.ec.sri.payment.search</field>
        <field name="model">l10n.ec.sri.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->

    <record id="l10n_ec_sri_payment_act_window" model="ir.actions.act_window">
        <field name="name">Sri Payment Method</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.ec.sri.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENU -->

    <menuitem action="l10n_ec_sri_payment_act_window"
              id="menu_sri_payment_method"
              sequence="2"
              parent="l10n_ec_base.menu_electronic_invoice_sri"/>

</odoo>
