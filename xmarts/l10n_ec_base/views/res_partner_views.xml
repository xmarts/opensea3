<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<!-- PARTNER FORM VIEW INHERIT -->
	<record id="l10n_ec_res_partner_form" model="ir.ui.view">
		<field name="name">l10n.ec.res.partner.form</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='street2']" position="after">
                <field name="l10n_ec_loc" invisible="1"/>
                <field name="city_id" placeholder="City" class="o_address_city" domain="[('state_id', '=', state_id)]" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
            </xpath>
			<xpath expr="//field[@name='city']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='city']" position="after">
                <field name="city_id" placeholder="City" class="o_address_city" domain="[('state_id', '=', state_id)]" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
            </xpath>
            <xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_open': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='city']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
		</field>
	</record>

    <record id="view_partner_latam_form_inh" model="ir.ui.view">
        <field name="name">view.partner.latam.form.inh</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_latam_base.view_partner_latam_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="property_account_position_id" required="1"/>
                <field name="l10n_ec_person_type_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_property_form_inh" model="ir.ui.view">
        <field name="name">res.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='fiscal_information']/field[@name='property_account_position_id']" position="replace">
            </xpath>
            <xpath expr="//group[@name='fiscal_information']" position="inside">
                <field name="l10n_ec_sri_payment_id"/>
                <field name="issue_withholding"/>
                <field name="is_force_keep_accounting"/>
                <field name="is_special_taxpayer"/>
                <field name="taxpayer_code" attrs="{'invisible': [('is_special_taxpayer', '!=', 'SI')], 'required': [('is_special_taxpayer', '!=', '000')]}"/>
            </xpath>
        </field>
    </record>

    <!-- PARTNER TREE VIEW INHERIT -->
    <record id="l10n_ec_res_partner_tree" model="ir.ui.view">
        <field name="name">l10n.ec.res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="l10n_latam_identification_type_id"/>
                <field name="vat"/>
                <field name="property_account_position_id"/>
            </xpath>
        </field>
    </record>

    <!-- PARTNER KANBAN VIEW INHERIT -->
    <record id="l10n_ec_res_partner_kanban" model="ir.ui.view">
        <field name="name">l10n.ec.res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_partner_categories')]" position="inside">
                <li t-if="record.vat.raw_value" class="o_text_overflow"><field name="l10n_latam_identification_type_id"/>: <field name="vat"/></li>
            </xpath>
        </field>
    </record>


</odoo>
