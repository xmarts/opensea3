<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- RES COUNTRY -->
    <record id="view_res_country_l10n_ec_tree" model="ir.ui.view">
        <field name="name">res.country.l10n.ec.tree</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_tree"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="l10n_ec_country_code"/>
            </field>
        </field>
    </record>

    <record id="view_res_country_l10n_ec_form" model="ir.ui.view">
        <field name="name">res.country.l10n.ec.form</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="l10n_ec_country_code"/>
            </field>
        </field>
    </record>

</odoo>
