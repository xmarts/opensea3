<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- EMISSION POINT -->

    <!-- TREE VIEW -->
    <record id="view_l10n_ec_emission_tree" model="ir.ui.view">
        <field name="name">l10n.ec.stablishment.tree</field>
        <field name="model">l10n.ec.stablishment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="emission_point_prefix"/>
                <field name="name" invisible="1"/>
                <field name="entity_id" invisible="1"/>
                <field name="electronic_invoice"/>
                <field name="electronic_creditnote"/>
                <field name="electronic_debitnote"/>
                <field name="electronic_liqpurchase"/>
                <field name="electronic_withholding"/>
                <field name="company_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_l10n_ec_emission_search" model="ir.ui.view">
        <field name="name">l10n.ec.stablishment.search</field>
        <field name="model">l10n.ec.stablishment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="electronic_invoice"/>
                <field name="electronic_creditnote"/>
                <field name="electronic_debitnote"/>
                <field name="electronic_liqpurchase"/>
                <field name="electronic_withholding"/>
                <field name="company_id"/>
                <filter name="group_by_company_id" string="Company" context="{'group_by':'company_id'}"/>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_l10n_ec_emission_form" model="ir.ui.view">
        <field name="name">l10n.ec.stablishment.form</field>
        <field name="model">l10n.ec.stablishment</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group string="Emission Point">
                        <group>
                            <field name="name"/>
                            <field name="entity_id"/>
                            <field name="emission_point_prefix" invisible="1"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group string="Electronic Sequences">
                        <group>
                            <field name="electronic_invoice"/>
                            <field name="electronic_creditnote"/>
                            <field name="electronic_debitnote"/>
                            <field name="electronic_liqpurchase"/>
                            <field name="electronic_withholding"/>
                        </group>
                        <group>
                            <field name="invoice_sequence_id" attrs="{'invisible': [('invoice_sequence_id','=', False)]}"/>
                            <field name="creditnote_sequence_id" attrs="{'invisible': [('creditnote_sequence_id','=', False)]}"/>
                            <field name="debitnote_sequence_id" attrs="{'invisible': [('debitnote_sequence_id','=', False)]}"/>
                            <field name="liqpurchase_sequence_id" attrs="{'invisible': [('liqpurchase_sequence_id','=', False)]}"/>
                            <field name="withholding_sequence_id" attrs="{'invisible': [('withholding_sequence_id','=', False)]}"/>
                        </group>
                    </group>
                    <group string="Accounting Configuration" invisible="1">
                        <field name="invoice_journal_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTIONS -->
    <record id="action_l10n_ec_emission" model="ir.actions.act_window">
        <field name="name">Emission Point</field>
        <field name="res_model">l10n.ec.stablishment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENUS -->
    <menuitem action="action_l10n_ec_emission"
              id="menu_action_l10n_ec_emission"
              parent="menu_electronic_invoice_sri"/>


</odoo>
