<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_auth_reversal" model="ir.ui.view">
        <field name="name">account.move.auth.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal"/>
        <field name="arch" type="xml">
            <field name="date" position="before">
                <field name="l10n_ec_emission_point_id" attrs="{'invisible': [('move_type', '=', 'in_invoice')]}"/>
                <field name="auth_number" attrs="{'invisible': [('move_type', '!=', 'in_invoice')], 'required': [('move_type', '=', 'in_invoice')]}"/>
            </field>
        </field>
    </record>

    <record id="view_account_move_auth_number_reversal" model="ir.ui.view">
        <field name="name">account.move.auth.number.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="l10n_latam_invoice_document.view_account_move_reversal"/>
        <field name="arch" type="xml">
            <field name="l10n_latam_document_number" position="after">
            </field>
        </field>
    </record>

</odoo>
