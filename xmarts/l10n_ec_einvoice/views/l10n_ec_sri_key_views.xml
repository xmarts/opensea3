<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW -->

    <record id="l10n_ec_sri_key_form_view" model="ir.ui.view">
        <field name="name">l10n.ec.sri.key.form</field>
        <field name="model">l10n.ec.sri.key</field>
        <field name="arch" type="xml">
            <form string="SRI Sign">
                <header>
                    <button string="Sync Key"
                            type="object"
                            name="action_validate_and_load"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="file_content" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                            <field name="password" password="true"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="issuer_common_name"/>
                            <field name="emision_date"/>
                            <field name="expire_date"/>
                            <field name="subject_common_name"/>
                            <field name="subject_serial_number"/>
                            <field name="subject_serial_number"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->

    <record id="l10n_ec_sri_key_tree_view" model="ir.ui.view">
        <field name="name">l10n.ec.sri.key.tree</field>
        <field name="model">l10n.ec.sri.key</field>
        <field name="arch" type="xml">
            <tree string="Sign">
                <field name="name"/>
                <field name="company_id"/>
                <field name="expire_date"/>
                <field name="active"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->

    <record id="l10n_ec_sri_key_act_window" model="ir.actions.act_window">
        <field name="name">Electronic Sign</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.ec.sri.key</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="Electronic Keys"
              id="menu_sri_signs"
              parent="l10n_ec_base.menu_electronic_invoice_sri"
              action="l10n_ec_sri_key_act_window"/>

</odoo>
