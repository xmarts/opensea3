<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_ewithholding" model="ir.actions.report">
        <field name="name">Retencion Electrónica</field>
        <field name="model">account.withholding</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ec_einvoice.report_ewithholding_template</field>
        <field name="report_file">l10n_ec_einvoice.report_ewithholding_template</field>
        <field name="binding_model_id" ref="l10n_ec_base.model_account_withholding"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'RET_'+object.name</field>
        <field name="paperformat_id" ref="l10n_ec_einvoice.paperformat_einvoice"/>
    </record>

    <template id="report_ewithholding_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ec_einvoice.einvoice_layout_elec">
                    <div class="page">
                        <link href="/l10n_ec_einvoice/static/css/report.css" rel="stylesheet" type="text/css"/>
                        <div class="row">
                            <div class="col-6">
                                <div class="logo">
                                    <img t-if="o.company_id.logo" height="100" t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()"/>
                                </div><br/>
                                <div class="einvoice_address">
                                    <h4><span t-esc="o.company_id.name"/></h4>
                                    <span>Dirección: </span><span t-esc="o.company_id.street"/><t t-if="o.company_id.street2"> Y <span t-esc="o.company_id.street2"/></t><br/>
                                    <span>Dirección Sucursal: </span><strong/><span t-esc="o.company_id.street"/><br/>
                                    <t t-if="o.company_id.is_special_taxpayer=='SI'">
                                        <strong>Contribuyente Especial Nro.: </strong>
                                        <span t-esc="o.company_id.taxpayer_code or '000' "/><br/>
                                    </t>
                                    <strong>Obligado a Llevar contabilidad: </strong> SI<br/>
                                    <t t-if="o.company_id.agent==True">
                                        <strong>Agente de Retención: </strong>SI<br/>
                                        <strong>Resolución: </strong><span t-esc="o.company_id.agent_text"/><br/>
                                    </t>
                                </div>
                            </div>
                            <div class="col-6 einvoice_type">
                                <span style="font-size: 18px"><strong>RUC </strong></span> <span style="font-size: 18px" t-esc="o.company_id.vat"/><br/>
                                <h4 style="text-align: center;">COMPROBANTE DE RETENCIÓN</h4><br/>
                                <strong>NÚMERO</strong> <span t-esc="o.name"/><br/>
                                <strong>NÚMERO DE AUTORIZACIÓN:</strong><br/>
                                <span t-esc="o.numero_autorizacion"/><br/>
                                <strong>FECHA Y HORA DE AUTORIZACIÓN: </strong><span t-esc="o.fecha_autorizacion"/><br/>
                                <strong>AMBIENTE: </strong><span t-esc="o.company_id.env_service == '1' and 'PRUEBAS' or 'PRODUCCIÓN'"/><br/>
                                <span><strong>EMISIÓN: </strong><span t-esc="o.company_id.emission_code == '1' and 'NORMAL' or 'INDISPONIBILIDAD'"/></span><br/>
                                <strong>CLAVE DE ACCESO</strong><br/><br/>
                                <div>
                                    <img style="text-align:center;width:100%" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', o.clave_acceso, 450, 60)"/>
                                </div>
                                <br/>
                            </div>
                        </div>
                        <br/>
                        <table class="table_einvoice">
                            <tr align="left">
                                <td style="width:32%;padding-left: 5px;">
                                    <span><strong>Razón Social/ Nombres y Apellidos:</strong></span>
                                </td>
                                <td style="padding-left: 5px;">
                                    <span t-esc="o.partner_id.name.upper()"/>
                                </td>
                                <td style="width:15%;padding-left: 5px;">
                                    <span><strong>Identificación:</strong></span>
                                </td>
                                <td style="width:15%;padding-left: 5px;">
                                    <span t-esc="o.partner_id.vat"/>
                                </td>
                            </tr>
                            <tr align="left">
                                <td style="width:10%;padding-left: 5px;">
                                    <span><strong>Fecha de Emisión:</strong></span>
                                </td>
                                <td colspan="3" style="padding-left: 5px;">
                                    <span t-esc="o.date"/>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <table height="60px" class="table_ewh">
                            <tr align="center">
                                <td><strong>Comprobante</strong></td>
                                <td><strong>Número</strong></td>
                                <td><strong>Fecha Emisión</strong></td>
                                <td><strong>Ejercicio Fiscal</strong></td>
                                <td><strong>Base Imponible</strong></td>
                                <td><strong>Impuesto</strong></td>
                                <td><strong>Código Retención</strong></td>
                                <td><strong>Porcentaje Retención</strong></td>
                                <td><strong>Valor Retenido</strong></td>
                            </tr>
                            <t t-foreach="o.tax_ids" t-as="line">
                                <tr align="center">
                                    <td>
                                        <t t-if="o.move_id.l10n_latam_document_code in ('01', '18')">
                                            <span>Factura</span>
                                        </t>
                                        <t t-if="o.move_id.l10n_latam_document_code=='03'">
                                            <span>Liquidación de Compra</span>
                                        </t>
                                    </td>
                                    <td>
                                        <span t-esc="line.withholding_id.move_id.l10n_latam_document_number"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.withholding_id.move_id.invoice_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.fiscal_year"/>
                                    </td>
                                    <td>
                                        <span t-esc="'%.2f' % line.base"/>
                                    </td>
                                    <td>
                                        <t t-if="line.tax_id.tax_group_id.l10n_ec_type in ('wh_vat')">
                                            <span>IVA</span>
                                        </t>
                                        <t t-if="line.tax_id.tax_group_id.l10n_ec_type == 'wh_income_tax'">
                                            <span>RENTA</span>
                                        </t>
                                    </td>
                                    <td>
                                        <span t-esc="line.tax_id.l10n_ec_code_applied"/>
                                    </td>
                                    <td>
                                        <span t-esc="abs(line.tax_id.amount)"/> %
                                    </td>
                                    <td>
                                        <span t-esc="'%.2f' % abs(line.base)"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                        <br/>
                        <div class="div_einfo">
                            <table class="table_einfo">
                                <tr>
                                    <td colspan="2" style="text-align:center"><strong>Información Adicional</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>Dirección: </strong></td><td><span t-esc="o.partner_id.street or '**'"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Teléfono: </strong></td><td><span t-esc="o.partner_id.phone or '**'"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Email: </strong></td><td><span t-esc="o.partner_id.email"/></td>
                                </tr>
                                <t t-if="o.company_id.rimpe_regime==True">
                                    <tr>
                                        <td colspan="2" style="text-align:center"><strong>Contribuyente Regimen Rimpe</strong></td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>

    </template>
</odoo>
