<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_ecreditnote" model="ir.actions.report">
        <field name="name">Nota de Crédito Electrónica</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ec_einvoice.report_enotacredito_template</field>
        <field name="report_file">l10n_ec_einvoice.report_enotacredito_template</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'NC_'+object.l10n_latam_document_number</field>
        <field name="paperformat_id" ref="l10n_ec_einvoice.paperformat_einvoice"/>
    </record>

    <template id="report_enotacredito_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ec_einvoice.einvoice_layout_elec">
                    <div class="page">
                        <link href="/l10n_ec_einvoice/static/css/report.css" rel="stylesheet" type="text/css"/>
                        <div class="row">
                            <div class="col-6">
                                <div class="logo">
                                    <img t-if="o.company_id.logo" height="100" t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()"/>
                                </div><br/>
                                <div class="einvoice_address">
                                    <h4><span t-esc="o.company_id.name"/></h4>
                                    <span>Dirección: </span><span t-esc="o.company_id.street"/><t t-if="o.company_id.street2"> Y <span t-esc="o.company_id.street2"/> </t> <br/>
                                    <span>Dirección Sucursal: </span><span t-esc="o.company_id.street"/><br/>
                                    <t t-if="o.company_id.is_special_taxpayer=='SI'">
                                        <strong>Contribuyente Especial Nro.: </strong>
                                        <span t-esc="o.company_id.taxpayer_code or '000' "/><br/>
                                    </t>
                                    <span>Obligado a Llevar contabilidad: </span> SI<br/>
                                    <t t-if="o.company_id.agent==True">
                                        <strong>Agente de Retención: </strong>SI<br/>
                                        <strong>Resolución: </strong><span t-esc="o.company_id.agent_text"/><br/>
                                    </t>
                                </div>
                            </div>
                            <div class="col-6 einvoice_type">
                                <span style="font-size: 18px"><strong>RUC </strong></span> <span style="font-size: 18px" t-esc="o.company_id.vat"/><br/>
                                <h4 style="text-align: center;">NOTA DE CRÉDITO</h4><br/>
                                <strong>NÚMERO</strong> <span t-esc="o.l10n_latam_document_number"/><br/>
                                <strong>NÚMERO DE AUTORIZACIÓN:</strong><br/>
                                <span t-esc="o.numero_autorizacion or o.auth_number"/><br/>
                                <strong>FECHA Y HORA DE AUTORIZACIÓN: </strong><span t-esc="o.fecha_autorizacion"/><br/>
                                <strong>AMBIENTE: </strong><span t-esc="o.company_id.env_service == '1' and 'PRUEBAS' or 'PRODUCCION'"/><br/>
                                <span><strong>EMISIÓN: </strong><span t-esc="o.company_id.emission_code == '1' and 'NORMAL' or 'INDISPONIBILIDAD'"/></span><br/>
                                <strong>CLAVE DE ACCESO</strong><br/>
                                <div>
                                    <img style="text-align:center;width:100%" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', o.clave_acceso, 450, 60)"/>
                                </div>
                                <br/>
                            </div>
                        </div>
                        <br/>
                        <table class="table_einvoice">
                            <tr align="left">
                                <td style="width:25%;padding-left: 5px;border-top: 1px solid black;border-left: 1px solid black;">
                                    <strong>Razón Social/ Nombres y Apellidos:</strong>
                                </td>
                                <td style="padding-left: 5px;border-top: 1px solid black;">
                                    <span t-esc="o.partner_id.name.upper()"/>
                                </td>
                                <td style="width:15%;padding-left: 5px;border-top: 1px solid black;">
                                    <strong>Identificación:</strong>
                                </td>
                                <td style="width:15%;padding-left: 5px;border-top: 1px solid black;border-right: 1px solid black;">
                                    <span t-esc="o.partner_id.vat"/>
                                </td>
                            </tr>
                            <tr align="left">
                                <td style="width:10%;padding-left: 5px;border-left: 1px solid black;">
                                    <strong>Fecha de Emisión:</strong>
                                </td>
                                <td colspan="3" style="padding-left: 5px;border-right: 1px solid black;">
                                    <span t-esc="o.date"/>
                                </td>
                            </tr>
                            <tr align="left">
                                <td style="width:10%;padding-left: 5px;border-bottom: 1px solid black;border-left: 1px solid black;">
                                    <strong>Comprobante que se modifica:</strong>
                                </td>
                                <td colspan="3" style="padding-left: 5px;border-bottom: 1px solid black;border-right: 1px solid black;">
                                   FACTURA <span t-esc="o.reversed_entry_id.l10n_latam_document_number"/>
                                </td>
                            </tr>
                            <tr align="left">
                                <td colspan="2" style="width:10%;padding-left: 5px;border-left: 1px solid black;">
                                    <strong>Fecha Emisión (Comprobante a modificar):</strong>
                                </td>
                                <td colspan="2"  style="padding-left: 5px;border-right: 1px solid black;">
                                    <span t-esc="o.reversed_entry_id.invoice_date"/>
                                </td>
                            </tr>
                            <tr align="left">
                                <td colspan="2" style="width:10%;padding-left: 5px;border-bottom: 1px solid black;border-left: 1px solid black;">
                                    <strong>Razón de la Modificación:</strong>
                                </td>
                                <td colspan="2" style="padding-left: 5px;border-bottom: 1px solid black;border-right: 1px solid black;">
                                    <t t-if="o.move_type =='out_refund'">
                                        <span t-esc="o.ref"/>
                                    </t>
                                    <t t-if="o.move_type =='in_refund'">
                                        <span t-esc="o.narration"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                        <table class="table table-sm" width="100%">
                            <thead style="text-align:center">
                                <th>Código</th>
                                <th>Cant.</th>
                                <th>Und.</th>
                                <th>Descripción</th>
                                <th>P. Unit.</th>
                                <th>Desc.</th>
                                <th>Total</th>
                            </thead>
                            <tbody class="invoice_tbody" style="text-align:center">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="discountproduct" t-value="0"/>
                                <t t-set="total_discount" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=true)"/>
                                <t t-foreach="lines" t-as="line">
                                    <tr align="center">
                                        <td width=" 10%" style="border: 1px solid"><span t-esc="line.product_id.default_code"/></td>
                                        <td width="7%" style="border: 1px solid"><span t-esc="'%.2f' % line.quantity"/></td>
                                        <td width="7%" style="border: 1px solid"><span t-esc="line.product_uom_id.name"/></td>
                                        <td width="24%" style="border: 1px solid">
                                            <span t-esc="line.product_id.product_tmpl_id.name"/>
                                        </td>
                                        <td width="8%" style="border: 1px solid"><span t-esc="'%.2f' % line.price_unit"/></td>
                                        <td width="7%" style="border: 1px solid"><span t-esc="'%.2f' % line.discount"/></td>
                                        <t t-set="discountproduct" t-value="(line.quantity*line.price_unit)*(line.discount/100)"/>
                                        <t t-set="total_discount" t-value="total_discount+discountproduct"/>
                                        <td width="8%" style="border: 1px solid;padding-right: 2px;"><span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="div_einfo">
                            <table class="table_einfo">
                                <tr>
                                    <td colspan="2" style="text-align:center"><strong>Información Adicional</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>Observaciones: </strong></td><td><span t-esc="o.narration or '**'"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Dirección: </strong></td><td><span t-esc="o.partner_id.street or '**'"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Teléfono: </strong></td><td><span t-esc="o.partner_id.phone or '**'"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Email: </strong></td><td><span t-esc="o.partner_id.email"/></td>
                                </tr>
                                <t t-if="o.company_id.regime==True">
                                    <tr>
                                        <td colspan="2" style="text-align:center"><strong>Contribuyente Regimen Microempresas</strong></td>
                                    </tr>
                                </t>
                                <t t-if="o.company_id.rimpe_regime==True">
                                    <tr>
                                        <td colspan="2" style="text-align:center"><strong>Contribuyente Regimen Rimpe</strong></td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div style="float: right;width: 50%;padding: 5px;">
                            <table class="table table-sm table-condensed;page-break-inside: avoid;" style="width:100%">
                                <tr>
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"/>
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="o._tax_by_l10n_ec_group(amount_by_group) not in ('wh_vat', 'wh_income_tax')">
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td><span t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>