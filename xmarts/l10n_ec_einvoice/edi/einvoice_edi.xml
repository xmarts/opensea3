<?xml version="1.0" ?>
<odoo>

    <!-- PLANTILLA DE CORREO PARA FACTURA ELECTRÓNICA -->
    <record id="email_template_einvoice" model="mail.template">
        <field name="name">Send eInvoice</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="subject">FACTURA ELECTRÓNICA N° ${object.l10n_latam_document_number}/ ${object.company_id.name}</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="auto_delete" eval="True"/>
        <field name="report_template" ref="l10n_ec_einvoice.report_einvoice"/>
        <field name="report_name">FACTURA_${(object.l10n_latam_document_number or '').replace('/','_')}</field>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="body_html"><![CDATA[
              Estimado/a ${object.partner_id.name},
              adjunto encontrará su factura electrónica número ${object.l10n_latam_document_number}, con fecha
              de emisión ${object.invoice_date} por un total de ${abs(object.amount_total)} ${object.currency_id.name}.

              En caso de requerir cualquier aclaración, por favor no dude en contactarnos.]]>
        </field>
    </record>

